<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
	x:Class="MyFirstMobileApp.TunerPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:MyFirstMobileApp"
	xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup">

	<StackLayout
		Padding="30"
		HorizontalOptions="FillAndExpand"
		VerticalOptions="FillAndExpand">
		<Frame
			Padding="0"
			BorderColor="Black"
			CornerRadius="10">
			<StackLayout BackgroundColor="White">
				<Label Style="{StaticResource HeaderLabelStyle}" Text="Tuner" />

				<Label
					Padding="5"
					FontSize="Large"
					HorizontalOptions="Center"
					Text="{Binding Note.Value}" />

				<Label
					Padding="5"
					FontSize="Large"
					HorizontalOptions="Center"
					Text="{Binding Frequency.Value}" />

				<!--<controls:Gauge
					
					x:Name="GaugeControl"
					EndValue="{Binding MaxFrequency.Value}"
					HeightRequest="100"
					NeedleColor="Brown"
					StartValue="{Binding MinFrequency.Value}"
					UnitsText="t"
					ValueFontSize="5"
					VerticalOptions="FillAndExpand"
					WidthRequest="300"
					Value="{Binding Frequency.Value}" />-->
				
				<Label
					Padding="5"
					HorizontalOptions="Center"
					Text="{Binding Buffer.Value}" />

				<Button Clicked="OnClose" Text="Close" />
			</StackLayout>
		</Frame>
	</StackLayout>
</pages:PopupPage>

